{
  "name": "modulist-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Modulist fullstack application for academic submission",
  "scripts": {
    "dev": "concurrently -k -n BACKEND,FRONTEND -c green,blue \"pnpm run backend:dev\" \"pnpm run frontend:dev\"",
    "backend:dev": "pnpm --filter modulist-backend dev",
    "frontend:dev": "pnpm --filter modulist-frontend dev",
    "build": "concurrently -k \"pnpm run backend:build\" \"pnpm run frontend:build\"",
    "backend:build": "pnpm --filter modulist-backend build",
    "frontend:build": "pnpm --filter modulist-frontend build",
    "test": "pnpm --filter modulist-backend test && pnpm --filter modulist-frontend test",
    "lint": "pnpm --filter modulist-backend lint && pnpm --filter modulist-frontend lint",
    "clean": "pnpm --filter modulist-backend clean && pnpm --filter modulist-frontend clean",
    "seed:images": "node scripts/seed-images.js",
    "upload:images": "node scripts/upload-images.js",
    "seed:mongo": "node packages/backend/scripts/seed-remote.js",
    "seed:mongo:manifest": "node packages/backend/scripts/seed-from-manifest.js",
    "test:e2e": "playwright test",
    "setup": "pnpm install && pnpm seed:images"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@playwright/test": "^1.47.2",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0",
    "@aws-sdk/client-s3": "^3.637.0",
    "@supabase/supabase-js": "^2.45.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "fullstack",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "academic",
    "monorepo"
  ],
  "author": "Penace",
  "license": "MIT"
}
