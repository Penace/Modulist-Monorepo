# Modulist Monorepo Environment Configuration

# Database
MONGO_URI=mongodb://localhost:27017/modulist

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
NODE_ENV=development
BACKEND_PORT=4000
FRONTEND_PORT=5173

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# CORS Configuration
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:4000

# Academic/Development Settings
DEBUG=true
VERBOSE_LOGGING=true

# Optional: MinIO upload (open-source S3 compatible)
MINIO_ENDPOINT=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=
MINIO_PUBLIC_BASE_URL=

# Optional: Supabase Storage (open-source)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_BUCKET=
# Optional: namespace/prefix for object keys
SUPABASE_PREFIX=modulist/
